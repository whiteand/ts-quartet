{
  "name": "quartet",
  "version": "8.2.1",
  "description": "functional and convenient validation library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whiteand/ts-quartet.git"
  },
  "keywords": [
    "validation",
    "library",
    "pure",
    "functional"
  ],
  "author": "andrewbeletskiy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/whiteand/ts-quartet/issues"
  },
  "homepage": "https://github.com/whiteand/ts-quartet#readme",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "jest": "^24.8.0",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  },
  "files": [
    "lib/**/*"
  ]
}
